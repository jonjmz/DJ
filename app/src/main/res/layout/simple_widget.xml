<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_margin"
    android:background="#45FFFFFF">

    <Button
        android:id="@+id/right"
        android:background="@drawable/rightx"
        android:layout_alignTop="@+id/trash"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_height="45dp"
        android:layout_width="45dp"
        android:layout_marginRight="48dp"
        android:layout_marginEnd="40dp"
        />
    <Button
        android:id="@+id/trash"
        android:background="@drawable/trashx"
        android:layout_alignTop="@+id/left"
        android:layout_toLeftOf="@+id/heart"
        android:layout_toStartOf="@+id/heart"
        android:layout_height="45dp"
        android:layout_width="45dp"
        android:layout_marginEnd="35dp"
        />
    <Button
        android:id="@+id/heart"
        android:background="@drawable/heartx"
        android:layout_alignTop="@+id/right"
        android:layout_toLeftOf="@+id/right"
        android:layout_toStartOf="@+id/right"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="35dp"
        />

    <Button
        android:id="@+id/left"
        android:background="@drawable/leftx"
        android:layout_toLeftOf="@+id/trash"
        android:layout_toStartOf="@+id/trash"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="35dp" />

</RelativeLayout>